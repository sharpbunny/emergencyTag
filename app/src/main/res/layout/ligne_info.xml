<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/item_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:background="#AAA"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_photo"
        android:layout_toEndOf="@+id/item_photo">

        <TextView
            android:id="@+id/item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Item Comment" />

        <TextView
            android:id="@+id/item_labeltype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Item Type" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/linearLayout"
        android:layout_toRightOf="@+id/item_photo"
        android:layout_toEndOf="@+id/item_photo">

        <TextView
            android:id="@+id/item_descriptiontype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/black"
            tools:text="Description type" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout2"
        android:layout_toRightOf="@+id/item_photo"
        android:layout_toEndOf="@+id/item_photo">

    <TextView
        android:id="@+id/item_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Item latitude"
        android:layout_toRightOf="@+id/item_photo"
        android:layout_toEndOf="@+id/item_photo"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_below="@+id/linearLayout2" />

    <TextView
        android:id="@+id/item_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        tools:text="Item latitude"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/item_latitude"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    </LinearLayout>



</RelativeLayout>